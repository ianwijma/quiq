{
  "extends": "../tsconfig.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "module": "esnext",
    "paths": {
      "@frontend": ["../frontend"],
      "@frontend/*": ["../frontend/*"],
      "@backend": ["../backend"],
      "@backend/*": ["../backend/*"],
      "@common": ["../common"],
      "@common/*": ["../common/*"],
    }
  }
}
